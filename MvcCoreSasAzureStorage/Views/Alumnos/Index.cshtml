@model IEnumerable<MvcCoreSasAzureStorage.Models.Alumno>

@{
	ViewData["Title"] = "Index";
}

<h1>Azure Alumnos SaS Token</h1>

<p>
	<a asp-controller="Alumnos" asp-action="Create" class="btn btn-outline-info">Create new</a>
</p>

<form method="post">
	<label>Introduzca curso</label>
	<input type="text" name="curso" class="form-control" />
	<br />
	<button class="btn btn-info">Mostrar alumnos</button>
</form>

@if (Model != null)
{
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.IdAlumno)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Curso)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Nombre)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Apellidos)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Nota)
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.IdAlumno)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Curso)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nombre)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Apellidos)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Nota)
					</td>
				</tr>
			}
		</tbody>
	</table>
}